<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="colorPrimaryDark">@color/darkBlue</item>
        <item name="android:navigationBarColor">@color/darkBlue</item>
        <item name="actionModeBackground">@color/darkBlue</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
    </style>

    <style name="MovieDetailActivity" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="colorPrimaryDark">@color/darkBlue</item>
        <item name="android:navigationBarColor">@color/darkBlue</item>
        <item name="actionModeBackground">@color/darkBlue</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
    </style>

    <style name="VideoPlayerActivity" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:padding">10dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="MovieDetailText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MovieDetailText.Title" parent="MovieDetailText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/contentTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="MovieDetailText.Body" parent="MovieDetailText">
        <item name="android:textColor">@color/contentBody</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="Card">
        <item name="android:layout_marginLeft">@dimen/cardLeftRightMargin</item>
        <item name="android:layout_marginTop">@dimen/cardTopBottomMargin</item>
        <item name="android:layout_marginRight">@dimen/cardLeftRightMargin</item>
        <item name="android:layout_marginBottom">@dimen/cardTopBottomMargin</item>
        <item name="cardCornerRadius">@dimen/cardCornerRadius</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>

</resources>
